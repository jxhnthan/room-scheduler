{
  "compilerOptions": {
    "target": "es2018", // Or "es2015", "es2016", "es2017", "esnext"
    "lib": ["dom", "dom.iterable", "esnext"], // "esnext" typically includes es2015+ features
    // OR more specifically for your case, ensure "es2015" is present:
    // "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017", "es2018"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true // Optional: you can explicitly add this flag too, but a newer target usually makes it implicit.
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
